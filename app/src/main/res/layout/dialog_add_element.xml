<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="@color/icon.l"
        android:paddingTop="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="24dp">

        <android.support.v7.widget.AppCompatSpinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:id="@+id/title" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:id="@+id/options"
        android:background="@color/icon.l"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingBottom="16dp"
            android:id="@+id/relativeLayout2">
                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/who"
                    android:id="@+id/persona"
                    android:inputType="textCapWords"
                    android:textColorHint="@color/white_back"
                    android:background="@color/icon.l"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout2"
            android:id="@+id/relativeLayout3"
            android:layout_centerHorizontal="true">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="54sp"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/white_back"
                    android:id="@+id/importo"
                    android:background="@color/icon.l"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:hint="0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_back"
                android:layout_toRightOf="@+id/importo"
                android:layout_toEndOf="@+id/importo"
                android:id="@+id/currency"
                android:textSize="54sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingBottom="16dp"
            android:layout_below="@+id/relativeLayout3"
            android:id="@+id/relativeLayout4" >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nota"
                    android:hint="@string/note"
                    android:textColorHint="@color/white_back"
                    android:background="@color/icon.l"
                    android:singleLine="false"
                    android:maxLines="3"
                    android:inputType="textCapSentences"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/white" />
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_below="@+id/options">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_cancel"
            android:textAppearance="?android:attr/buttonStyle"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:padding="8dp"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/item_background"
            android:textColor="@color/third_text"
            android:clickable="true"
            android:id="@+id/cancel_action"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_save"
            android:textAppearance="?android:attr/buttonStyle"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:padding="8dp"
            android:clickable="true"
            android:background="@drawable/item_background"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/primary_text"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:id="@+id/buttonpositive" />
    </RelativeLayout>
</RelativeLayout>
