<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="wrap_content"  android:layout_width="match_parent">
    <item android:state_selected="false">
        <ripple android:color="@color/back_select">
            <item>
                <shape>
                    <solid android:color="@android:color/white" />
                </shape>
            </item>
        </ripple>
    </item>
    <item android:state_selected="true">
        <ripple android:color="@color/back_select">
            <item>
                <shape>
                    <solid android:color="@color/back_select" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>